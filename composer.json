{
  "name": "hirasso/rh-admin-utils",
  "description": "A WordPress utility plugin ðŸ¥ž",
  "license": "GPL-2.0-or-later",
  "autoload": {
    "psr-4": {
      "RH\\AdminUtils\\": "src"
    }
  },
  "type": "wordpress-plugin",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=8.2",
    "composer/installers": "^1.0 || ^2.0",
    "snicco/better-wp-cli": "^1.10",
    "sniccowp/php-scoper-wordpress-excludes": "*",
    "symfony/var-dumper": "^7.1",
    "yahnis-elsts/plugin-update-checker": "^5.5"
  },
  "require-dev": {
    "laravel/pint": "^1.21",
    "php-stubs/wordpress-stubs": "^6.9",
    "php-stubs/wp-cli-stubs": "^2.12",
    "wpackagist-plugin/simply-static": "^3.5"
  },
  "extra": {
    "installer-paths": {
      "vendor/wp-plugins/{$name}/": ["type:wordpress-plugin"]
    }
  },
  "scripts-descriptions": {},
  "config": {
    "allow-plugins": {
      "composer/installers": true
    },
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
