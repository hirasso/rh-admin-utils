#!/bin/bash

# Prepares the dist folder, including untracked but required dist files

# Stop execution on errors
set -e

echo "ğŸ’¡ Preparing the dist folder..."

# Validate that we are at the project root
if [[ ! -f "$PWD/.gitignore" ]]; then
  echo "âŒ "$(basename "$0")" must run from the package root"
  exit 1
fi


# Make sure `generateReleaseFiles` was executed
if [ ! -d "scoped" ]; then
  echo "âŒ The 'scoped' folder does not exist. Please run generateReleaseFiles.sh first."
  exit 1
fi

# Initialize the dist folder if it doesn't exist
if [ "$GITHUB_ACTIONS" != "true" ]; then
  echo "ğŸ’¡ cloning the dist repo into dist/"
  rm -rf dist && git clone -b empty git@github.com:hirasso/rh-admin-utils-dist.git dist/
fi

echo "ğŸ’¡ Checking out the empty tagged root commit"
git -C dist checkout --detach empty

echo "ğŸ’¡ Copying all files from scoped/ to dist/"
cp -Rf scoped/* dist/

# echo "ğŸ’¡ Overwriting the composer.json in dist/"
cp composer.dist.json dist/composer.json